-- Criação da Interface
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local Admin1 = Instance.new("TextLabel")
local Admin2 = Instance.new("TextLabel")
local ToggleButton = Instance.new("TextButton")
local DeleteButton = Instance.new("TextButton")

local admins = {701394241, 224670451} -- IDs dos administradores

-- Configuração da Interface
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.Position = UDim2.new(0.5, -100, 0.5, -90)
Frame.Size = UDim2.new(0, 200, 0, 180)

Title.Parent = Frame
Title.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Title.Size = UDim2.new(1, 0, 0.2, 0)
Title.Font = Enum.Font.SourceSansBold
Title.Text = "Admins Próximos"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextScaled = true

Admin1.Parent = Frame
Admin1.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Admin1.Position = UDim2.new(0, 0, 0.2, 0)
Admin1.Size = UDim2.new(1, 0, 0.2, 0)
Admin1.Font = Enum.Font.SourceSans
Admin1.TextColor3 = Color3.fromRGB(255, 255, 255)
Admin1.TextScaled = true

Admin2.Parent = Frame
Admin2.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Admin2.Position = UDim2.new(0, 0, 0.4, 0)
Admin2.Size = UDim2.new(1, 0, 0.2, 0)
Admin2.Font = Enum.Font.SourceSans
Admin2.TextColor3 = Color3.fromRGB(255, 255, 255)
Admin2.TextScaled = true

ToggleButton.Parent = Frame
ToggleButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
ToggleButton.Position = UDim2.new(0, 0, 0.6, 0)
ToggleButton.Size = UDim2.new(1, 0, 0.1, 0)
ToggleButton.Font = Enum.Font.SourceSansBold
ToggleButton.Text = "Desativar Arraste"
ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleButton.TextScaled = true

DeleteButton.Parent = Frame
DeleteButton.BackgroundColor3 = Color3.fromRGB(100, 0, 0)
DeleteButton.Position = UDim2.new(0, 0, 0.7, 0) -- Ajuste para garantir espaço adequado
DeleteButton.Size = UDim2.new(1, 0, 0.1, 0)
DeleteButton.Font = Enum.Font.SourceSansBold
DeleteButton.Text = "Deletar GUI"
DeleteButton.TextColor3 = Color3.fromRGB(255, 255, 255)
DeleteButton.TextScaled = true

-- Sistema de arrastar a interface
local isDragging = false
local dragStart
local startPos
local dragEnabled = true -- Estado inicial do arraste habilitado

Frame.InputBegan:Connect(function(input)
    if dragEnabled and input.UserInputType == Enum.UserInputType.MouseButton1 then
        isDragging = true
        dragStart = input.Position
        startPos = Frame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                isDragging = false
            end
        end)
    end
end)

Frame.InputChanged:Connect(function(input)
    if isDragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        Frame.Position = UDim2.new(
            startPos.X.Scale,
            startPos.X.Offset + delta.X,
            startPos.Y.Scale,
            startPos.Y.Offset + delta.Y
        )
    end
end)

-- Alternar o estado de arraste
ToggleButton.MouseButton1Click:Connect(function()
    dragEnabled = not dragEnabled
    if dragEnabled then
        ToggleButton.Text = "Desativar Arraste"
        ToggleButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    else
        ToggleButton.Text = "Ativar Arraste"
        ToggleButton.BackgroundColor3 = Color3.fromRGB(100, 0, 0)
    end
end)

-- Deletar a GUI
DeleteButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- Função para Atualizar Admins
local function updateAdminDistances()
    local player = game.Players.LocalPlayer
    local playerPos = player.Character:WaitForChild("HumanoidRootPart").Position

    for i, adminId in ipairs(admins) do
        local admin = game.Players:GetPlayerByUserId(adminId)
        if admin and admin.Character then
            local adminPos = admin.Character:WaitForChild("HumanoidRootPart").Position
            local distance = (adminPos - playerPos).Magnitude

            if i == 1 then
                Admin1.Text = admin.Name .. " [" .. math.floor(distance) .. "m]"
            elseif i == 2 then
                Admin2.Text = admin.Name .. " [" .. math.floor(distance) .. "m]"
            end
        else
            if i == 1 then
                Admin1.Text = "N/A"
            elseif i == 2 then
                Admin2.Text = "N/A"
            end
        end
    end
end

-- Atualização Contínua
game:GetService("RunService").RenderStepped:Connect(updateAdminDistances)
