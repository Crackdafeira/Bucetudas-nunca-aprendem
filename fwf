-- Criação da Interface
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local Admin1 = Instance.new("TextLabel")
local Admin2 = Instance.new("TextLabel")
local ToggleButton = Instance.new("TextButton")
local DeleteButton = Instance.new("TextButton")

local admins = {701394241, 224670451} -- IDs dos administradores

-- Configuração da Interface
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(26, 26, 26) -- Cor escura para o fundo da Frame
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -130)
MainFrame.Size = UDim2.new(0, 300, 0, 250)
MainFrame.Active = true
MainFrame.Draggable = true -- Habilita o arrasto
MainFrame.BorderSizePixel = 0
MainFrame.BackgroundTransparency = 0.15

-- Título
Title.Parent = MainFrame
Title.BackgroundColor3 = Color3.fromRGB(50, 50, 50) -- Fundo do título
Title.Size = UDim2.new(1, 0, 0.2, 0)
Title.Font = Enum.Font.GothamBold
Title.Text = "Admins Próximos"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextScaled = true
Title.TextStrokeTransparency = 0.3
Title.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)

-- Admin 1
Admin1.Parent = MainFrame
Admin1.BackgroundColor3 = Color3.fromRGB(42, 42, 42)
Admin1.Position = UDim2.new(0, 10, 0.2, 5)
Admin1.Size = UDim2.new(1, -20, 0.2, -5)
Admin1.Font = Enum.Font.Gotham
Admin1.TextColor3 = Color3.fromRGB(255, 255, 255)
Admin1.TextScaled = true
Admin1.TextStrokeTransparency = 0.5
Admin1.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)

-- Admin 2
Admin2.Parent = MainFrame
Admin2.BackgroundColor3 = Color3.fromRGB(42, 42, 42)
Admin2.Position = UDim2.new(0, 10, 0.4, 5)
Admin2.Size = UDim2.new(1, -20, 0.2, -5)
Admin2.Font = Enum.Font.Gotham
Admin2.TextColor3 = Color3.fromRGB(255, 255, 255)
Admin2.TextScaled = true
Admin2.TextStrokeTransparency = 0.5
Admin2.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)

-- Botão de Alternar Arraste
ToggleButton.Parent = MainFrame
ToggleButton.BackgroundColor3 = Color3.fromRGB(66, 133, 244) -- Azul
ToggleButton.Position = UDim2.new(0, 10, 0.6, 5)
ToggleButton.Size = UDim2.new(1, -20, 0.15, -5)
ToggleButton.Font = Enum.Font.GothamBold
ToggleButton.Text = "Desativar Arraste"
ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleButton.TextScaled = true
ToggleButton.TextStrokeTransparency = 0.5
ToggleButton.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
ToggleButton.BorderSizePixel = 0

-- Botão Deletar GUI
DeleteButton.Parent = MainFrame
DeleteButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- Vermelho
DeleteButton.Position = UDim2.new(0, 10, 0.8, 5)
DeleteButton.Size = UDim2.new(1, -20, 0.15, -5)
DeleteButton.Font = Enum.Font.GothamBold
DeleteButton.Text = "Deletar GUI"
DeleteButton.TextColor3 = Color3.fromRGB(255, 255, 255)
DeleteButton.TextScaled = true
DeleteButton.TextStrokeTransparency = 0.5
DeleteButton.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
DeleteButton.BorderSizePixel = 0

-- Sistema de arrastar a interface
local isDragging = false
local dragStart
local startPos
local dragEnabled = true -- Estado inicial do arraste habilitado

MainFrame.InputBegan:Connect(function(input)
    if dragEnabled and input.UserInputType == Enum.UserInputType.MouseButton1 then
        isDragging = true
        dragStart = input.Position
        startPos = MainFrame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                isDragging = false
            end
        end)
    end
end)

MainFrame.InputChanged:Connect(function(input)
    if isDragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        MainFrame.Position = UDim2.new(
            startPos.X.Scale,
            startPos.X.Offset + delta.X,
            startPos.Y.Scale,
            startPos.Y.Offset + delta.Y
        )
    end
end)

-- Alternar o estado de arraste
ToggleButton.MouseButton1Click:Connect(function()
    dragEnabled = not dragEnabled
    if dragEnabled then
        ToggleButton.Text = "Desativar Arraste"
        ToggleButton.BackgroundColor3 = Color3.fromRGB(66, 133, 244)
    else
        ToggleButton.Text = "Ativar Arraste"
        ToggleButton.BackgroundColor3 = Color3.fromRGB(255, 165, 0) -- Laranja
    end
end)

-- Deletar a GUI
DeleteButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- Função para Atualizar Admins
local function updateAdminDistances()
    local player = game.Players.LocalPlayer
    local playerPos = player.Character:WaitForChild("HumanoidRootPart").Position

    for i, adminId in ipairs(admins) do
        local admin = game.Players:GetPlayerByUserId(adminId)
        if admin and admin.Character then
            local adminPos = admin.Character:WaitForChild("HumanoidRootPart").Position
            local distance = (adminPos - playerPos).Magnitude

            if i == 1 then
                Admin1.Text = admin.Name .. " [" .. math.floor(distance) .. "m]"
            elseif i == 2 then
                Admin2.Text = admin.Name .. " [" .. math.floor(distance) .. "m]"
            end
        else
            if i == 1 then
                Admin1.Text = "N/A"
            elseif i == 2 then
                Admin2.Text = "N/A"
            end
        end
    end
end

-- Atualização Contínua
game:GetService("RunService").RenderStepped:Connect(updateAdminDistances)
